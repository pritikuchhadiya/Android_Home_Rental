<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirmRent">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Please give these informatins for confirmation"
        android:textColor="@color/Cyan"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />


    <EditText
        android:id="@+id/con_Name"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_input"
        android:hint="Your name"
        android:textSize="20dp"
        android:layout_marginTop="160sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302" />

    <EditText
        android:id="@+id/con_phnNo"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_input"
        android:hint="Your Contact No"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_marginTop="280sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <EditText
        android:id="@+id/con_address"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_input"
        android:hint="Your Address"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_marginTop="220sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <EditText
        android:id="@+id/con_addhar"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_input"
        android:hint="Your Addhar Card Number"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_marginTop="340sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <EditText
        android:id="@+id/con_currentadd"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_input"
        android:hint=" Your Current Living City "
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_marginTop="400sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <EditText
        android:id="@+id/con_buyrent"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_input"
        android:hint="Buy/Rent"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_marginTop="460sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <EditText
        android:id="@+id/con_Negotitation"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_input"
        android:hint="Negotiable Price"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_marginTop="520sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-199dp"
        tools:layout_editor_absoluteY="-70dp">

        <ImageButton
            android:id="@+id/payrent"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="82dp"
            android:background="@color/White"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/payrent" />

        <ImageButton
            android:id="@+id/confirm"
            android:layout_width="219dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="13dp"
            android:background="@color/White"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/confirm" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>